<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="carbon.zeroevents.Manual_User.LoginOptions">


    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebookLoginBut"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/manualSignUpBut"
        android:layout_alignEnd="@+id/signUpTxt"
        android:layout_alignStart="@+id/signUpIntroTxt"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:background="@android:color/white"
        android:fontFamily="@font/roboto_thin"
        android:padding="20dp"
        android:text="@string/facebookLoginBut"
        android:textSize="15sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/signUpTxt"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="31dp"
        android:fontFamily="@font/roboto_thin"
        android:text="@string/signUpTxt"
        android:textColor="@color/homePageBackgroundColour"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/signUpIntroTxt"
        android:layout_width="283dp"
        android:layout_height="65dp"
        android:layout_alignStart="@+id/signUpTxt"
        android:layout_below="@+id/signUpTxt"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/roboto_thin"
        android:text="@string/signUpIntroTxt"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="bold" />

    <Button
        android:id="@+id/manualSignUpBut"
        android:layout_width="369dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"
        android:fontFamily="@font/roboto_thin"
        android:text="@string/manualSignUpBut"
        android:textAllCaps="false" />


</RelativeLayout>
