<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="carbon.zeroevents.Manual_User.LoginOptions">

    <Button
        android:id="@+id/manualSignUpBut"
        android:layout_width="1000dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="121dp"
        android:background="@android:color/white"
        android:fontFamily="@font/roboto_thin"
        android:padding="20dp"
        android:text="@string/manualSignUpBut"
        android:textSize="15sp" />


    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebookLoginBut"
        android:layout_width="1000dp"
        android:layout_height="80dp"
        android:layout_above="@+id/manualSignUpBut"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="27dp"
        android:fontFamily="@font/roboto_thin"
        android:padding="20dp"
        android:text="@string/facebookLoginBut"
        android:textSize="15sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/signUpTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="31dp"
        android:fontFamily="@font/roboto_thin"
        android:text="@string/signUpTxt"
        android:textColor="@color/homePageBackgroundColour"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/signUpIntroTxt"
        android:layout_width="283dp"
        android:layout_height="65dp"
        android:layout_alignStart="@+id/signUpTxt"
        android:layout_below="@+id/signUpTxt"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/roboto_thin"
        android:text="@string/signUpIntroTxt"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="1000dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/facebookLoginBut"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:fontFamily="@font/roboto_thin"
        android:text="TextView"
        android:textAlignment="center" />


</RelativeLayout>
